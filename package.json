{
  "name": "@dojo/scripts",
  "version": "3.0.0-pre",
  "description": "Scripts for developing Dojo2 packages",
  "engines": {
    "npm": ">=3.0.0"
  },
  "private": true,
  "homepage": "http://dojo.io",
  "bugs": {
    "url": "https://github.com/dojo/scripts/issues"
  },
  "license": "BSD-3-Clause",
  "main": "main.js",
  "files": [
    "dist",
    "src",
    "typings.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dojo/scripts.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc && copyfiles \"src/**/*.json\" dist/cjs && copyfiles \"src/bin/*\" dist/cjs",
    "package": "node dist/cjs/src/package.js",
    "link": "cd dist/release && npm link",
    "lint": "tslint -p .",
    "prettier": "prettier --write 'src/**/*.ts*' 'tests/**/*.ts*'",
    "precommit": "lint-staged",
    "test": "npm run build && npm run package && intern"
  },
  "bin": {
    "dojo-can-publish-check": "./bin/dojo-can-publish-check",
    "dojo-repo-is-clean-check": "./bin/dojo-repo-is-clean-check",
    "dojo-install-peer-deps": "./bin/dojo-install-peer-deps",
    "dojo-package": "./bin/dojo-package",
    "dojo-release": "./bin/dojo-release",
    "dojo-tsc-watcher": "./bin/dojo-tsc-watcher"
  },
  "devDependencies": {
    "@types/node": "^6.0.54",
    "@types/parse-git-config": "^2.0.0",
    "@types/sinon": "~4.3.3",
    "@types/yargs": "^8.0.2",
    "codecov": "~3.0.4",
    "copyfiles": "^1.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "rimraf": "^2.6.2",
    "sinon": "~4.5.0"
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "intern": "~4.2.0",
    "parse-git-config": "^2.0.2",
    "prettier": "^1.10.2",
    "rxjs": "^5.5.6",
    "tslint": "~5.11.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "~2.6.2",
    "yargs": "^10.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
